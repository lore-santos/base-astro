---
interface Props {
	title: string;
	body: string;
	href?: string;
}

const { href, title, body } = Astro.props;
---

<div class="max-w-sm rounded overflow-hidden shadow-lg m-8">
	<slot name="href"/>
	<div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
     {body}
    </p>
  </div>
</div>